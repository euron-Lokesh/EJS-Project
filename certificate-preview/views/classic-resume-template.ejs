<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Resume</title>
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* A4 page setup */
        @page {
            size: A4;
            margin: 15mm; /* Add margin to all sides of the page when printing */
        }
        @media print {
            html, body {
                width: 210mm;
                height: 297mm;
                margin: 0;
                padding: 0;
            }
            .container {
                width: 100%;
                padding: 6mm; /* Add padding inside the container */
                margin: 0 auto;
                box-shadow: none;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Times New Roman', serif;
        }
        body {
            background: #fff;
            color: #000;
            line-height: 1.4; 
            font-size: 14px; 
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px; 
        }
        .header {
            text-align: center;
            margin-bottom: 15px; 
        }
        .name {
            font-size: 28px; 
            font-weight: bold;
            margin-bottom: 10px; 
            color: #000000;
        }
        .contact-info {
            display: flex;
            justify-content: center;
            gap: 15px; 
            align-items: center;
            font-size: 13px; 
            flex-wrap: wrap;
        }
        .contact-info i {
            margin-right: 4px;
            color: #000000;
        }
        .section {
            margin-bottom: 15px; 
        }
        .section-title {
            font-size: 16px; 
            font-weight: bold;
            border-bottom: 2px solid #000;
            margin-bottom: 8px; 
            text-transform: uppercase;
            padding-bottom: 1px;
            color: #000000;
        }
        .summary {
            margin-bottom: 10px; 
            text-align: justify;
            font-size: 13px; 
        }
        .experience-item {
            margin-bottom: 10px; 
        }
        .company-header {
            display: flex;
            justify-content: space-between;
            font-weight: bold;
            font-size: 14px; 
        }
        .designation {
            font-style: italic;
            margin-bottom: 3px; 
            font-size: 13px; 
        }
        .description-points {
            list-style-type: disc;
            margin-left: 15px; 
            font-size: 13px; 
        }
        .description-points li {
            margin-bottom: 2px; 
        }
        .project-item {
            margin-bottom: 10px; 
        }
        .project-name {
            font-weight: bold;
            font-size: 14px; 
        }
        .project-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 2px; 
        }
        .project-description {
            font-size: 13px; 
        }
        .skills-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px; 
            margin-top: 5px; 
        }
        .skill-category {
            margin-bottom: 5px; 
        }
        .skill-category h3 {
            font-size: 14px; 
            font-weight: bold;
            margin-bottom: 2px; 
        }
        .skill-category p {
            font-size: 13px; 
            line-height: 1.3; 
        }
        .education-item {
            margin-bottom: 10px; 
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }
        .education-details {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .degree {
            font-weight: bold;
            color: #02070d;
            font-size: 14px; 
        }
        .institution {
            margin-top: 2px; 
            font-size: 13px; 
        }
        .duration {
            font-weight: bold;
            font-size: 14px; 
        }
        .location {
            font-size: 13px; 
        }
        .duration-location {
            text-align: right;
            margin-left: 15px; 
        }
        .container {
            overflow: hidden;
        }
        .skills-content {
            margin-bottom: 10px;
        }
        .achievements-list {
            list-style-type: none;
            padding-left: 0;
        }
        .achievement-item {
            margin-bottom: 5px;
        }
        .achievement-name {
            font-weight: 500;
        }
        .achievement-date {
            font-style: italic;
            margin-left: 10px;
        }
        .achievement-issuer {
            font-size: 11px;
            color: #666;
        }
        .contact-info a {
            word-break: break-all;
            font-size: 12px;
            text-decoration: none;
            color: #000000;
        }
        .contact-info a:hover {
            text-decoration: underline;
        }
        .contact-info span {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <%
    function shouldRender(value) {
        if (!value) return false;
        const trimmedValue = value.replace(/\s/g, '');
        if (trimmedValue === '' || trimmedValue === '/-/' || trimmedValue.toLowerCase() === 'n/a') {
            return false;
        }
        return true;
    }
    %>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <div class="name"><%= data && data.updatedResume && data.updatedResume.personalInfo ? data.updatedResume.personalInfo.name : '' %></div>
            <div class="contact-info">
                <% if (data && data.updatedResume && data.updatedResume.personalInfo) { %>
                    <% if (data.updatedResume.personalInfo.email) { %>
                        <span>
                            <i class="fas fa-envelope"></i> 
                            <a href="mailto:<%= data.updatedResume.personalInfo.email %>"><%= data.updatedResume.personalInfo.email %></a>
                        </span>
                    <% } %>
                    
                    <% if (data.updatedResume.personalInfo.phone) { %>
                        <span>
                            <i class="fas fa-phone"></i> 
                            <a href="tel:<%= data.updatedResume.personalInfo.phone %>"><%= data.updatedResume.personalInfo.phone %></a>
                        </span>
                    <% } %>
                    
                    <% if (data.updatedResume.personalInfo.location) { %>
                        <span>
                            <i class="fas fa-map-marker-alt"></i> 
                            <%= data.updatedResume.personalInfo.location %>
                        </span>
                    <% } %>
                    
                    <% 
                    // Helper function to determine the icon class based on URL
                    function getIconForUrl(url) {
                      if (!url) return 'fas fa-globe';
                      
                      const urlLower = url.toLowerCase();
                      if (urlLower.includes('linkedin.com')) return 'fab fa-linkedin';
                      if (urlLower.includes('github.com')) return 'fab fa-github';
                      if (urlLower.includes('leetcode.com')) return 'fas fa-code';
                      if (urlLower.includes('medium.com')) return 'fab fa-medium';
                      if (urlLower.includes('twitter.com') || urlLower.includes('x.com')) return 'fab fa-twitter';
                      if (urlLower.includes('facebook.com')) return 'fab fa-facebook';
                      if (urlLower.includes('instagram.com')) return 'fab fa-instagram';
                      if (urlLower.includes('youtube.com')) return 'fab fa-youtube';
                      if (urlLower.includes('stackoverflow.com')) return 'fab fa-stack-overflow';
                      if (urlLower.includes('codepen.io')) return 'fab fa-codepen';
                      if (urlLower.includes('codechef.com')) return 'fas fa-code';
                      if (urlLower.includes('codeforces.com')) return 'fas fa-code';
                      if (urlLower.includes('hackerearth.com')) return 'fas fa-code';
                      if (urlLower.includes('hackerrank.com')) return 'fas fa-code';
                      return 'fas fa-globe';
                    }
                    
                    // Helper function to get display text for the link
                    function getDisplayText(url) {
                      if (url.includes('linkedin.com')) return 'LinkedIn';
                      if (url.includes('github.com')) return 'GitHub';
                      if (url.includes('leetcode.com')) return 'LeetCode';
                      
                      try {
                        const domain = new URL(url).hostname.replace('www.', '');
                        return domain.split('.')[0].charAt(0).toUpperCase() + domain.split('.')[0].slice(1);
                      } catch(e) {
                        return 'Website';
                      }
                    }
                    
                    // Handle new format: links array (from uploaded resumes)
                    if (data.updatedResume.personalInfo.links && 
                        data.updatedResume.personalInfo.links.length > 0) {
                      data.updatedResume.personalInfo.links.forEach(url => {
                    %>
                      <span>
                        <i class="<%= getIconForUrl(url) %>"></i> 
                        <a href="<%= url %>" target="_blank"><%= getDisplayText(url) %></a>
                      </span>
                    <% 
                      });
                    }
                    
                    // Backward compatibility: Handle old format individual properties
                    if (data.updatedResume.personalInfo.linkedin) { %>
                        <span>
                            <i class="fab fa-linkedin"></i> 
                            <a href="<%= data.updatedResume.personalInfo.linkedin %>" target="_blank">LinkedIn</a>
                        </span>
                    <% } %>
                    
                    <% if (data.updatedResume.personalInfo.github) { %>
                        <span>
                            <i class="fab fa-github"></i> 
                            <a href="<%= data.updatedResume.personalInfo.github %>" target="_blank">GitHub</a>
                        </span>
                    <% } %>
                    
                    <% if (data.updatedResume.personalInfo.leetcode) { %>
                        <span>
                            <i class="fas fa-code"></i> 
                            <a href="<%= data.updatedResume.personalInfo.leetcode %>" target="_blank">LeetCode</a>
                        </span>
                    <% } %>
                    
                    <% if (data.updatedResume.personalInfo.portfolio) { %>
                        <span>
                            <i class="fas fa-globe"></i> 
                            <a href="<%= data.updatedResume.personalInfo.portfolio %>" target="_blank">Portfolio</a>
                        </span>
                    <% } %>
                <% } %>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="section">
            <h2 class="section-title">PROFESSIONAL SUMMARY</h2>
            <div class="summary">
                <%= data && data.updatedResume && data.updatedResume.summary ? data.updatedResume.summary : '' %>
            </div>
        </div>

        <!-- Skills Section -->
        <div class="section">
            <h2 class="section-title">SKILLS</h2>
            <div class="skills-content">
                <% if (data && data.updatedResume && data.updatedResume.skills) { %>
                    <% if (data.updatedResume.skills.programming) { %>
                        <!-- Original format: skills.programming -->
                        <p><%= data.updatedResume.skills.programming %></p>
                    <% } else if (Array.isArray(data.updatedResume.skills)) { %>
                        <!-- Array format: skills as array -->
                        <p><%= data.updatedResume.skills.join(', ') %></p>
                    <% } %>
                <% } %>
            </div>
        </div>

        <!-- Experience Section - Only render if experience exists and has items -->
        <% if (data && data.updatedResume && data.updatedResume.experience && data.updatedResume.experience.length > 0) { %>
        <div class="section">
            <h2 class="section-title">EXPERIENCE</h2>
            <% data.updatedResume.experience.forEach(exp => { %>
                <div class="experience-item">
                    <div class="company-header">
                        <div>
                            <%= exp && exp.companyName ? exp.companyName : '' %>
                            <% if (exp.link) { %>
                                <a href="<%= exp.link %>" target="_blank" style="text-decoration: none; margin-left: 5px; color: #042236;">
                                    <i class="fas fa-link" style="font-size: 0.7em;"></i>
                                </a>
                            <% } %>
                        </div>
                        <% if (shouldRender(exp.duration)) { %>
                            <div><%= exp.duration %></div>
                        <% } %>
                    </div>
                    <div class="designation"><%= exp && exp.designation ? exp.designation : '' %></div>
                    <ul class="description-points">
                        <% if (exp && exp.description && Array.isArray(exp.description)) { %>
                            <% exp.description.forEach(desc => { %>
                                <li><%= desc && (desc.point || desc.points) ? (desc.point || desc.points) : '' %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
            <% }) %>
        </div>
        <% } %>

        <!-- Projects Section -->
        <% if (data && data.updatedResume && data.updatedResume.projects && data.updatedResume.projects.length > 0) { %>
        <div class="section">
            <h2 class="section-title">PROJECTS</h2>
            <% data.updatedResume.projects.forEach(project => { %>
                <div class="project-item">
                    <div class="project-header">
                        <span class="project-name">
                            <%= project && project.name ? project.name : '' %>
                            <% if (project.link) { %>
                                <a href="<%= project.link %>" target="_blank" style="text-decoration: none; margin-left: 5px; color: #042236;">
                                    <i class="fas fa-link" style="font-size: 0.7em;"></i>
                                </a>
                            <% } %>
                        </span>
                        <% if (shouldRender(project.duration)) { %>
                            <span><%= project.duration %></span>
                        <% } %>
                    </div>
                    <ul class="description-points">
                        <% project.description.forEach(desc => { %>
                            <li><%= desc.point %></li>
                        <% }) %>
                    </ul>
                </div>
            <% }) %>
        </div>
        <% } %>

        <!-- Achievements & Certifications Section - Only if data exists -->
        <% if (data && data.updatedResume && data.updatedResume.achievements && data.updatedResume.achievements.length > 0) { %>
        <div class="section">
            <h2 class="section-title">ACHIEVEMENTS & CERTIFICATIONS</h2>
            <ul class="achievements-list">
                <% data.updatedResume.achievements.forEach(achievement => { %>
                    <li>
                        <div class="achievement-item">
                            <% if (typeof achievement === 'object' && achievement !== null) { %>
                                <span class="achievement-name"><%= achievement.name %></span>
                                <% if (achievement.link) { %>
                                    <a href="<%= achievement.link %>" target="_blank" style="text-decoration: none; margin-left: 5px; color: #042236;">
                                        <i class="fas fa-link" style="font-size: 0.7em;"></i>
                                    </a>
                                <% } %>
                                <% if (shouldRender(achievement.date)) { %>
                                    <span class="achievement-date"><%= achievement.date %></span>
                                <% } %>
                            <% } else { %>
                                <span class="achievement-name"><%= achievement %></span>
                            <% } %>
                        </div>
                    </li>
                <% }) %>
            </ul>
        </div>
        <% } %>

        <!-- Education Section -->
        <% if (data && data.updatedResume && data.updatedResume.education && data.updatedResume.education.length > 0) { %>
        <div class="section">
            <h2 class="section-title">EDUCATION</h2>
            <% data.updatedResume.education.forEach(edu => { %>
                <div class="education-item">
                    <div class="education-details">
                        <div class="degree"><%= edu && edu.degree ? edu.degree : '' %></div>
                        <div class="institution"><%= edu && edu.institution ? edu.institution : '' %></div>
                    </div>
                    <div class="duration-location">
                        <% if (shouldRender(edu.duration)) { %>
                            <div class="duration"><%= edu.duration %></div>
                        <% } %>
                        <% if (edu && edu.location) { %>
                            <div class="location"><%= edu.location %></div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
        <% } %>
    </div>
</body>
</html> 