<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sage Multi-Column Resume</title>
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* A4 page setup */
        @page {
            size: A4;
            margin: 0;
        }
        @media print {
            html, body {
                width: 210mm;
                height: 297mm;
                margin: 0;
                padding: 0;
            }
            .container {
                width: 100%;
                padding: 0;
                margin: 0 auto;
                box-shadow: none;
            }
            
            /* Prevent items from breaking across pages */
            .experience-item, .project-item, .achievement-item, .education-item {
                page-break-inside: avoid !important;
                break-inside: avoid !important;
            }
            
            /* Ensure section titles stay with their content */
            .section-title {
                page-break-after: avoid;
                break-after: avoid;
            }
            
            .section {
                page-break-inside: auto;
                break-inside: auto;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            line-height: 1.4;
            font-size: 10pt;
        }
        
        .container {
            max-width: 210mm;
            margin: 0 auto;
            display: flex;
            min-height: 297mm;
        }
        
        /* Left Sidebar */
        .sidebar {
            width: 35%;
            background: #B9CDC2;
            padding: 25px 20px;
            color: #333;
        }
        
        .sidebar-header {
            text-align: left;
            margin-bottom: 25px;
        }
        
        .name {
            font-size: 24pt;
            font-weight: 700;
            color: #2c3e2d;
            margin-bottom: 8px;
            line-height: 1.1;
        }
        
        .job-title {
            font-size: 12pt;
            font-weight: 400;
            color: #2c3e2d;
            font-style: italic;
            margin-bottom: 20px;
        }
        
        .contact-info {
            margin-bottom: 25px;
        }
        
        .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 9pt;
            color: #2c3e2d;
        }
        
        .contact-item i {
            width: 16px;
            margin-right: 8px;
            color: #2c3e2d;
            font-size: 10pt;
        }
        
        .contact-item a {
            color: #2c3e2d;
            text-decoration: none;
        }
        
        .contact-item a:hover {
            text-decoration: underline;
        }
        
        /* Sidebar Sections */
        .sidebar-section {
            margin-bottom: 25px;
        }
        
        .sidebar-section-title {
            font-size: 11pt;
            font-weight: 700;
            color: #2c3e2d;
            margin-bottom: 12px;
            padding-bottom: 4px;
            border-bottom: 2px solid #2c3e2d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        /* Profile Section in Sidebar */
        .profile-text {
            font-size: 9pt;
            line-height: 1.5;
            text-align: justify;
            color: #2c3e2d;
        }
        
        /* Education Section in Sidebar */
        .education-item {
            margin-bottom: 15px;
            page-break-inside: avoid;
            break-inside: avoid;
        }
        
        .degree {
            font-size: 10pt;
            font-weight: 700;
            color: #2c3e2d;
            margin-bottom: 2px;
        }
        
        .institution {
            font-size: 9pt;
            color: #2c3e2d;
            font-style: italic;
            margin-bottom: 2px;
        }
        
        .education-duration {
            font-size: 9pt;
            color: #2c3e2d;
            font-weight: 500;
        }
        
        /* Languages Section in Sidebar */
        .language-item {
            margin-bottom: 8px;
        }
        
        .language-name {
            font-size: 9pt;
            font-weight: 600;
            color: #2c3e2d;
        }
        
        .language-level {
            font-size: 9pt;
            color: #2c3e2d;
            margin-left: 5px;
        }
        
        /* Right Content Area */
        .main-content {
            width: 65%;
            padding: 25px 20px;
            background: #fff;
        }
        
        /* Main Content Sections */
        .section {
            margin-bottom: 20px;
        }
        
        .section-title {
            font-size: 12pt;
            font-weight: 700;
            color: #2c3e2d;
            margin-bottom: 12px;
            padding-bottom: 4px;
            border-bottom: 2px solid #2c3e2d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        /* Experience Section */
        .experience-item {
            margin-bottom: 18px;
            page-break-inside: avoid;
            break-inside: avoid;
        }
        
        .experience-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 4px;
        }
        
        .position-company {
            flex: 1;
        }
        
        .position-title {
            font-size: 11pt;
            font-weight: 700;
            color: #2c3e2d;
            margin-bottom: 2px;
        }
        
        .company-name {
            font-size: 10pt;
            color: #666;
            font-style: italic;
        }
        
        .duration-location {
            text-align: right;
            margin-left: 15px;
        }
        
        .duration {
            font-size: 9pt;
            color: #666;
            font-weight: 500;
            margin-bottom: 1px;
        }
        
        .location {
            font-size: 9pt;
            color: #666;
        }
        
        .description-points {
            list-style: none;
            padding-left: 0;
            margin-top: 8px;
        }
        
        .description-points li {
            font-size: 9pt;
            line-height: 1.5;
            margin-bottom: 3px;
            padding-left: 12px;
            position: relative;
            color: #333;
        }
        
        .description-points li:before {
            content: '•';
            position: absolute;
            left: 0;
            color: #B9CDC2;
            font-weight: 700;
        }
        
        /* Skills Section - 4 Column Grid */
        .skills-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 8px 12px;
            list-style: none;
            padding-left: 0;
        }
        
        @media (max-width: 600px) {
            .skills-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        .skills-grid li {
            font-size: 9pt;
            line-height: 1.4;
            padding-left: 12px;
            position: relative;
            color: #333;
            break-inside: avoid;
            page-break-inside: avoid;
        }
        
        .skills-grid li:before {
            content: '•';
            position: absolute;
            left: 0;
            color: #B9CDC2;
            font-weight: 700;
        }
        
        /* Projects Section */
        .project-item {
            margin-bottom: 15px;
            page-break-inside: avoid;
            break-inside: avoid;
        }
        
        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 4px;
        }
        
        .project-name {
            font-size: 10pt;
            font-weight: 700;
            color: #2c3e2d;
        }
        
        .project-duration {
            font-size: 9pt;
            color: #666;
            margin-left: 15px;
        }
        
        .project-points {
            list-style: none;
            padding-left: 0;
            margin-top: 6px;
        }
        
        .project-points li {
            font-size: 9pt;
            line-height: 1.5;
            margin-bottom: 3px;
            padding-left: 12px;
            position: relative;
            color: #333;
        }
        
        .project-points li:before {
            content: '•';
            position: absolute;
            left: 0;
            color: #B9CDC2;
            font-weight: 700;
        }
        
        /* Awards Section */
        .awards-list {
            list-style: none;
            padding-left: 0;
        }
        
        .award-item {
            margin-bottom: 8px;
            page-break-inside: avoid;
            break-inside: avoid;
        }
        
        .award-title {
            font-size: 9pt;
            font-weight: 600;
            color: #2c3e2d;
        }
        
        .award-description {
            font-size: 9pt;
            color: #666;
            font-style: italic;
        }
        
        /* Link styling */
        .item-link {
            text-decoration: none;
            margin-left: 5px;
            color: #B9CDC2;
            font-size: 0.85em;
        }
        
        .item-link:hover {
            color: #2c3e2d;
        }
    </style>
</head>
<body>
    <%
    function shouldRender(value) {
        if (!value) return false;
        const trimmedValue = value.replace(/\s/g, '');
        if (trimmedValue === '' || trimmedValue === '/-/' || trimmedValue.toLowerCase() === 'n/a') {
            return false;
        }
        return true;
    }
    %>
    <div class="container">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <!-- Header -->
            <div class="sidebar-header">
                <div class="name"><%= data && data.updatedResume && data.updatedResume.personalInfo ? data.updatedResume.personalInfo.name : '' %></div>
                <div class="job-title">
                    <% if (data && data.updatedResume && data.updatedResume.personalInfo && data.updatedResume.personalInfo.title) { %>
                        <%= data.updatedResume.personalInfo.title %>
                    <% } else { %>
                        Business Development Consultant
                    <% } %>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="contact-info">
                <% 
                // Helper function to determine the icon class based on URL
                function getIconForUrl(url) {
                  if (!url) return 'fas fa-globe';
                  
                  const urlLower = url.toLowerCase();
                  if (urlLower.includes('linkedin.com')) return 'fab fa-linkedin';
                  if (urlLower.includes('github.com')) return 'fab fa-github';
                  if (urlLower.includes('leetcode.com')) return 'fas fa-code';
                  if (urlLower.includes('medium.com')) return 'fab fa-medium';
                  if (urlLower.includes('twitter.com') || urlLower.includes('x.com')) return 'fab fa-twitter';
                  if (urlLower.includes('facebook.com')) return 'fab fa-facebook';
                  if (urlLower.includes('instagram.com')) return 'fab fa-instagram';
                  if (urlLower.includes('youtube.com')) return 'fab fa-youtube';
                  if (urlLower.includes('stackoverflow.com')) return 'fab fa-stack-overflow';
                  if (urlLower.includes('codepen.io')) return 'fab fa-codepen';
                  return 'fas fa-globe';
                }
                
                // Helper function to get display text for the link
                function getDisplayText(url) {
                  if (url.includes('linkedin.com')) return 'LinkedIn';
                  if (url.includes('github.com')) return 'GitHub';
                  if (url.includes('leetcode.com')) return 'LeetCode';
                  
                  try {
                    const domain = new URL(url).hostname.replace('www.', '');
                    return domain.split('.')[0].charAt(0).toUpperCase() + domain.split('.')[0].slice(1);
                  } catch(e) {
                    return 'Website';
                  }
                }
                
                if (data && data.updatedResume && data.updatedResume.personalInfo) {
                    if (data.updatedResume.personalInfo.email) {
                %>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <a href="mailto:<%= data.updatedResume.personalInfo.email %>"><%= data.updatedResume.personalInfo.email %></a>
                    </div>
                <% 
                    }
                    
                    if (data.updatedResume.personalInfo.phone) {
                %>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <%= data.updatedResume.personalInfo.phone %>
                    </div>
                <% 
                    }
                    
                    if (data.updatedResume.personalInfo.location) {
                %>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <%= data.updatedResume.personalInfo.location %>
                    </div>
                <% 
                    }
                    
                    // Handle all links in the array
                    if (data.updatedResume.personalInfo.links && 
                        data.updatedResume.personalInfo.links.length > 0) {
                      data.updatedResume.personalInfo.links.forEach(url => {
                %>
                      <div class="contact-item">
                        <i class="<%= getIconForUrl(url) %>"></i> 
                        <a href="<%= url %>" target="_blank"><%= getDisplayText(url) %></a>
                      </div>
                <% 
                      });
                    }
                }
                %>
            </div>

            <!-- Profile Section -->
            <% if (data && data.updatedResume && data.updatedResume.summary) { %>
            <div class="sidebar-section">
                <div class="sidebar-section-title">Profile</div>
                <div class="profile-text">
                    <%= data.updatedResume.summary %>
                </div>
            </div>
            <% } %>

            <!-- Education Section -->
            <% if (data && data.updatedResume && data.updatedResume.education && data.updatedResume.education.length > 0) { %>
            <div class="sidebar-section">
                <div class="sidebar-section-title">Education</div>
                <% data.updatedResume.education.forEach(edu => { %>
                    <div class="education-item">
                        <div class="degree">
                            <%= edu && edu.degree ? edu.degree : '' %>
                            <% if (edu && edu.link) { %>
                                <a href="<%= edu.link %>" target="_blank" class="item-link">
                                    <i class="fas fa-link"></i>
                                </a>
                            <% } %>
                        </div>
                        <div class="institution"><%= edu && edu.institution ? edu.institution : '' %></div>
                        <% if (edu && shouldRender(edu.duration)) { %>
                            <div class="education-duration"><%= edu.duration %></div>
                        <% } %>
                    </div>
                <% }) %>
            </div>
            <% } %>

            <!-- Languages Section (if available) -->
            <% if (data && data.updatedResume && data.updatedResume.languages && data.updatedResume.languages.length > 0) { %>
            <div class="sidebar-section">
                <div class="sidebar-section-title">Languages</div>
                <% data.updatedResume.languages.forEach(lang => { %>
                    <div class="language-item">
                        <% if (typeof lang === 'object' && lang !== null) { %>
                            <span class="language-name"><%= lang.name || '' %></span>
                            <% if (lang.level) { %><span class="language-level">— <%= lang.level %></span><% } %>
                        <% } else { %>
                            <span class="language-name"><%= lang %></span>
                        <% } %>
                    </div>
                <% }) %>
            </div>
            <% } %>
        </div>

        <!-- Right Content Area -->
        <div class="main-content">
            <!-- Professional Experience Section -->
            <% if (data && data.updatedResume && data.updatedResume.experience && data.updatedResume.experience.length > 0) { %>
            <div class="section">
                <div class="section-title">Professional Experience</div>
                <% data.updatedResume.experience.forEach(exp => { %>
                    <div class="experience-item">
                        <div class="experience-header">
                            <div class="position-company">
                                <div class="position-title">
                                    <%= exp && exp.designation ? exp.designation : '' %>
                                </div>
                                <div class="company-name">
                                    <%= exp && exp.companyName ? exp.companyName : '' %>
                                    <% if (exp && exp.link) { %>
                                        <a href="<%= exp.link %>" target="_blank" class="item-link">
                                            <i class="fas fa-link"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                            <div class="duration-location">
                                <% if (exp && shouldRender(exp.duration)) { %>
                                    <div class="duration"><%= exp.duration %></div>
                                <% } %>
                                <% if (exp && exp.location) { %>
                                    <div class="location"><%= exp.location %></div>
                                <% } %>
                            </div>
                        </div>
                        <% if (exp && exp.description && Array.isArray(exp.description)) { %>
                            <ul class="description-points">
                                <% exp.description.forEach(desc => { %>
                                    <li><%= desc && (desc.point || desc.points) ? (desc.point || desc.points) : (typeof desc === 'string' ? desc : '') %></li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>
                <% }) %>
            </div>
            <% } %>

            <!-- Skills Section -->
            <% if (data && data.updatedResume && data.updatedResume.skills && data.updatedResume.skills.length > 0) { %>
            <div class="section">
                <div class="section-title">Skills</div>
                <ul class="skills-grid">
                    <% data.updatedResume.skills.forEach(skill => { %>
                        <li><%= skill %></li>
                    <% }) %>
                </ul>
            </div>
            <% } %>

            <!-- Projects Section -->
            <% if (data && data.updatedResume && data.updatedResume.projects && data.updatedResume.projects.length > 0) { %>
            <div class="section">
                <div class="section-title">Projects</div>
                <% data.updatedResume.projects.forEach(project => { %>
                    <div class="project-item">
                        <div class="project-header">
                            <div class="project-name">
                                <%= project && project.name ? project.name : '' %>
                                <% if (project && project.link) { %>
                                    <a href="<%= project.link %>" target="_blank" class="item-link">
                                        <i class="fas fa-link"></i>
                                    </a>
                                <% } %>
                            </div>
                            <% if (project && shouldRender(project.duration)) { %>
                                <div class="project-duration"><%= project.duration %></div>
                            <% } %>
                        </div>
                        <% if (project && project.description && Array.isArray(project.description)) { %>
                            <ul class="project-points">
                                <% project.description.forEach(desc => { %>
                                    <li><%= desc && (desc.point || desc.points) ? (desc.point || desc.points) : (typeof desc === 'string' ? desc : '') %></li>
                                <% }) %>
                            </ul>
                        <% } %>
                    </div>
                <% }) %>
            </div>
            <% } %>

            <!-- Awards Section -->
            <% if (data && data.updatedResume && data.updatedResume.achievements && data.updatedResume.achievements.length > 0) { %>
            <div class="section">
                <div class="section-title">Awards</div>
                <ul class="awards-list">
                    <% data.updatedResume.achievements.forEach(achievement => { %>
                        <li class="award-item">
                            <% if (typeof achievement === 'object' && achievement !== null) { %>
                                <div class="award-title">
                                    <%= achievement.name || '' %>
                                    <% if (achievement.link) { %>
                                        <a href="<%= achievement.link %>" target="_blank" class="item-link">
                                            <i class="fas fa-link"></i>
                                        </a>
                                    <% } %>
                                </div>
                                <% if (achievement.date && shouldRender(achievement.date)) { %>
                                    <div class="award-description"><%= achievement.date %></div>
                                <% } %>
                            <% } else { %>
                                <div class="award-title"><%= achievement %></div>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <% } %>
        </div>
    </div>
</body>
</html>
