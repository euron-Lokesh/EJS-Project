<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Cover Letter</title>
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* A4 page setup */
        @page {
            size: A4;
            margin: 0;
        }
        @media print {
            html, body {
                width: 210mm;
                height: 297mm;
                margin: 0;
                padding: 0;
            }
            .container {
                width: 100%;
                padding: 0;
                margin: 0 auto;
                box-shadow: none;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: #fff;
            color: #000;
            line-height: 1.6;
            font-size: 12px;
            font-family: Arial, sans-serif;
        }
        
        .container {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
        }
        
        /* Purple Header Section */
        .header {
            background: linear-gradient(135deg, #8B4A9C, #A855A8);
            color: white;
            padding: 40px 30px;
            text-align: center;
        }
        
        .name {
            font-size: 36px;
            font-weight: 300;
            margin-bottom: 8px;
            letter-spacing: 2px;
        }
        
        .job-title {
            font-size: 18px;
            font-weight: 300;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }
        
        .contact-info {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            font-size: 12px;
            gap: 25px;
        }
        
        .contact-info span {
            display: flex;
            align-items: center;
            color: white;
        }
        
        .contact-info i {
            margin-right: 8px;
            width: 16px;
            text-align: center;
            font-size: 14px;
        }
        
        .contact-info a {
            text-decoration: none;
            color: white;
            font-weight: 400;
        }
        
        .contact-info a:hover {
            text-decoration: underline;
        }
        
        /* Content Section */
        .content {
            padding: 40px 30px;
            background: #f8f8f8;
        }
        
        .date {
            text-align: right;
            margin-bottom: 30px;
            font-size: 12px;
            color: #666;
        }
        
        .recipient {
            margin-bottom: 25px;
            color: #333;
        }
        
        .recipient-name {
            font-weight: bold;
            margin-bottom: 3px;
        }
        
        .salutation {
            margin-bottom: 20px;
            font-weight: 500;
            color: #333;
        }
        
        .letter-body {
            text-align: justify;
            margin-bottom: 25px;
            line-height: 1.7;
            color: #444;
        }
        
        .paragraph {
            margin-bottom: 18px;
            text-indent: 0;
        }
        
        .closing {
            margin-bottom: 8px;
            color: #333;
        }
        
        .signature {
            margin-top: 8px;
        }
        
        .signature-name {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Purple Header Section -->
        <div class="header">
            <div class="name"><%= data.coverLetter.personalInfo.name %></div>
            <div class="job-title"><%= data.coverLetter.personalInfo.title %></div>
            <div class="contact-info">
                <% 
                // Helper function to determine the icon class based on URL
                function getIconForUrl(url) {
                  if (!url) return 'fas fa-globe';
                  
                  const urlLower = url.toLowerCase();
                  if (urlLower.includes('linkedin.com')) return 'fab fa-linkedin';
                  if (urlLower.includes('github.com')) return 'fab fa-github';
                  if (urlLower.includes('leetcode.com')) return 'fas fa-code';
                  if (urlLower.includes('medium.com')) return 'fab fa-medium';
                  if (urlLower.includes('twitter.com') || urlLower.includes('x.com')) return 'fab fa-twitter';
                  if (urlLower.includes('facebook.com')) return 'fab fa-facebook';
                  if (urlLower.includes('instagram.com')) return 'fab fa-instagram';
                  if (urlLower.includes('youtube.com')) return 'fab fa-youtube';
                  if (urlLower.includes('stackoverflow.com')) return 'fab fa-stack-overflow';
                  if (urlLower.includes('codepen.io')) return 'fab fa-codepen';
                  if (urlLower.includes('codechef.com')) return 'fas fa-code';
                  if (urlLower.includes('codeforces.com')) return 'fas fa-code';
                  if (urlLower.includes('hackerearth.com')) return 'fas fa-code';
                  if (urlLower.includes('hackerrank.com')) return 'fas fa-code';
                  return 'fas fa-globe';
                }
                
                // Helper function to get display text for the link
                function getDisplayText(url) {
                  if (!url) return url;
                  
                  try {
                    const urlLower = url.toLowerCase();
                    
                    // Special cases for common platforms
                    if (urlLower.includes('linkedin.com')) return 'LinkedIn';
                    if (urlLower.includes('github.com')) return 'GitHub';
                    if (urlLower.includes('leetcode.com')) return 'LeetCode';
                    if (urlLower.includes('twitter.com') || urlLower.includes('x.com')) return 'Twitter';
                    if (urlLower.includes('medium.com')) return 'Medium';
                    if (urlLower.includes('facebook.com')) return 'Facebook';
                    if (urlLower.includes('instagram.com')) return 'Instagram';
                    if (urlLower.includes('youtube.com')) return 'YouTube';
                    if (urlLower.includes('stackoverflow.com')) return 'Stack Overflow';
                    if (urlLower.includes('codepen.io')) return 'CodePen';
                    if (urlLower.includes('codechef.com')) return 'CodeChef';
                    if (urlLower.includes('codeforces.com')) return 'Codeforces';
                    if (urlLower.includes('hackerearth.com')) return 'HackerEarth';
                    if (urlLower.includes('hackerrank.com')) return 'HackerRank';
                    if (urlLower.includes('portfolio')) return 'Portfolio';
                    
                    // Default: show domain
                    const domain = new URL(url).hostname;
                    return domain.replace('www.', '');
                  } catch (e) {
                    return url;
                  }
                }
                %>
                <% if (data.coverLetter.personalInfo.email) { %>
                    <span><i class="fas fa-envelope"></i> <%= data.coverLetter.personalInfo.email %></span>
                <% } %>
                <% if (data.coverLetter.personalInfo.phone) { %>
                    <span><i class="fas fa-phone"></i> <%= data.coverLetter.personalInfo.phone %></span>
                <% } %>
                <% if (data.coverLetter.personalInfo.address) { %>
                    <span><i class="fas fa-map-marker-alt"></i> <%= data.coverLetter.personalInfo.address %></span>
                <% } %>
                
                <% if (data.coverLetter.personalInfo.links && data.coverLetter.personalInfo.links.length > 0) { %>
                    <% data.coverLetter.personalInfo.links.forEach(link => { %>
                        <span>
                            <i class="<%= getIconForUrl(link) %>"></i>
                            <a href="<%= link %>" target="_blank"><%= getDisplayText(link) %></a>
                        </span>
                    <% }); %>
                <% } %>
            </div>
        </div>

        <!-- Content Section -->
        <div class="content">
            <!-- Date -->
            <div class="date">
                <% 
                // Generate current date in a nice format
                const currentDate = new Date();
                const options = { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric'
                };
                const formattedDate = currentDate.toLocaleDateString('en-US', options);
                
                // Convert to ordinal format (1st, 2nd, 3rd, etc.)
                function getOrdinalSuffix(day) {
                    if (day > 3 && day < 21) return 'th';
                    switch (day % 10) {
                        case 1: return 'st';
                        case 2: return 'nd';
                        case 3: return 'rd';
                        default: return 'th';
                    }
                }
                
                const day = currentDate.getDate();
                const month = currentDate.toLocaleDateString('en-US', { month: 'long' });
                const year = currentDate.getFullYear();
                const ordinalDate = `${day}${getOrdinalSuffix(day)} ${month}, ${year}`;
                %>
                <%= ordinalDate %>
            </div>

            <!-- Recipient Information -->
            <div class="recipient">
                <% if (data.coverLetter.recipient && data.coverLetter.recipient.title) { %>
                    <div class="recipient-name"><%= data.coverLetter.recipient.title %></div>
                <% } %>
                <% if (data.coverLetter.recipient && data.coverLetter.recipient.company) { %>
                    <div><%= data.coverLetter.recipient.company %></div>
                <% } %>
                <% if (data.coverLetter.recipient && data.coverLetter.recipient.address) { %>
                    <div><%= data.coverLetter.recipient.address %></div>
                <% } %>
            </div>

            <!-- Salutation -->
            <div class="salutation">
                <% if (data.coverLetter.salutation) { %>
                    <%= data.coverLetter.salutation %>
                <% } else { %>
                    Dear Hiring Manager,
                <% } %>
            </div>

            <!-- Letter Body -->
            <div class="letter-body">
                <% data.coverLetter.body.paragraphs.forEach(paragraph => { %>
                    <div class="paragraph"><%= paragraph %></div>
                <% }) %>
            </div>

            <!-- Closing -->
            <div class="closing">
                <%= data.coverLetter.closing %>,
            </div>

            <!-- Signature -->
            <div class="signature">
                <div class="signature-name"><%= data.coverLetter.personalInfo.name %></div>
            </div>
        </div>
    </div>
</body>
</html>
